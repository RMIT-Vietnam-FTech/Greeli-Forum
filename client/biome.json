{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {
		"ignore": [".next"],
		"include": [
			"./src/**/*.jsx",
			"./components/**/*.jsx",
			"./src/index.js",
			"./src/**/*.css",
			"./src/**/*.scss"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["camelCase", "export"]
					}
				},
				"useNamingConvention": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	}
}
